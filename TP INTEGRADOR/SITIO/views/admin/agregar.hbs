<div class="container" style="margin:100px auto">
    <div class="col-6 offset-3">
        <h4>Alta Testimonio</h4>
        <form action="/admin/testimonios/agregar" method="post">
            <div class="form-group">
                <input type="number" class="form-control" placeholder="Id" name="id">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Nombre" name="nombre">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Ciudad" name="ciudad">
            </div>
            <div class="form-group">
                <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"> </textarea>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}

    </div>
</div>