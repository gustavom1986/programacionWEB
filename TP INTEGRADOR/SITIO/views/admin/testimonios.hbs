
<div id="admin.Testimonios" class="container" style="margin:100px auto">
    <div class="py-5"></div>
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{usuario}}! <a href="login/logout" class="btn btn-sm btn-danger">Cerrar
                    sesi√≥n <i class="fa fa-sign-out" aria-hidden="true"></i></a> </p>
        </div>
    </div>
    {{!-- fin fila 1 --}}
    {{!-- inicio fila 2 --}}
    <div class="row">
        <div class="col-7" style="margin-top:-9px ;">
            <h2>Listado de Testimonios</h2>
        </div>
        <div class="col-5 text-right">
            <a href="testimonios/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>
    </div>
    {{!-- fin fila2 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Ciudad</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each testimonios}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{nombre}}</td>
                        <td>{{ciudad}}</td>
                        <td class="text-center">
                            <a href="/admin/testimonios/modificar/{{id}}" class="btn  btn-secondary">
                                <i class="fas fa-pencil-alt"></i> </a>
                            <a href="/admin/testimonios/eliminar/{{id}}" class="btn  btn-secondary">
                                <i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each }}
                </tbody>
            </table>
        </div>
    </div>
</div>